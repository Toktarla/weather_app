<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enhanced Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        body {
            padding: 20px;
            background-color: #f4f7fc;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .dashboard-header {
            margin-bottom: 30px;
            color: #333;
        }
        .btn-custom {
            margin-right: 5px;
            border-radius: 20px;
        }
        .table-custom {
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
        }
        .table-custom thead {
            background-color: #007bff;
            color: #fff;
        }
        .table-custom th, .table-custom td {
            vertical-align: middle;
        }
        .status-badge {
            padding: 5px 10px;
            color: #fff;
            border-radius: 15px;
            font-size: 0.8em;
        }
        .status-admin {
            background-color: #28a745;
        }
        .status-user {
            background-color: #6c757d;
        }
        .icon-button {
            color: #fff;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="dashboard-header text-center">Enhanced Admin Dashboard</h1> 
        <a href="/weather" class="btn btn-primary mb-3 btn-custom">Go back</a>
        <div class="table-responsive">
            <table class="table table-custom align-middle">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(function(user){ %>
                        <tr>
                            <td><%= user.name %></td>
                            <td><%= user.email %></td>
                            <td>
                                <span class="status-badge <%= user.adminStatus ? 'status-admin' : 'status-user' %>">
                                    <%= user.adminStatus ? 'Admin' : 'User' %>
                                </span>
                            </td>
                            <td class="table-actions">
                                <button class="btn btn-info btn-custom" onclick="location.href='/edit-user/<%= user._id %>'"><i class="fas fa-edit"></i> Edit</button>
                                <button class="btn btn-danger btn-custom" onclick="location.href='/delete-user/<%= user._id %>'"><i class="fas fa-trash-alt"></i> Delete</button>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
